
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Forgot Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/Panel/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Content/Panel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/Panel/dist/css/adminlte.min.css">

    <style>
        .errorsClass {
            color: red;
        }

        .successClass {
            color: green;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img src="/Content/Images/loadingImg.gif" alt="AdminLTELogo" height="100" width="100">
    </div>
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <img src="~/Content/Images/loginlogo.png" alt="Logo" style="height: 90px; display: block; margin: 0 auto;">
            </div>
            <div class="card-body">
                <p class="login-box-msg">Forgot Password</p>

                <form id="forgotPasswordForm" @*onsubmit="return false;"*@>
                    <div class="input-group">
                        <input id="txtEmail" name="txtEmail" type="email" class="form-control" placeholder="Email" autocomplete="off">
                        <div class="input-group-append">
                            <div class="input-group-text">
                                <span class="fas fa-envelope"></span>
                            </div>
                        </div>
                    </div>
                    <div class="mb-3">
                        <span id="email_error_Login" class="errorsClass"></span>
                    </div>
                    <div class="row">
                        <div class="col-8 text-left" style="padding-top:8px;">
                            <a href="/Login">Login</a>
                        </div>
                        <!-- /.col -->
                        <div class="col-4">
                            <button id="submitButton" type="submit" class="btn btn-primary btn-block" @*onclick="forgotPassword();"*@>Submit</button>
                        </div>
                        <!-- /.col -->
                    </div>
                </form>

                <div class="social-auth-links text-center mt-2 mb-3">
                    <div>
                        <span id="resp_error_Login" class="errorsClass"></span>
                    </div>
                    <div>
                        <span id="resp_success_Login" class="successClass"></span>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/ScriptFiles/Loader.js"></script>
    <script src="/Content/Panel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/Panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/Panel/dist/js/adminlte.min.js"></script>
    <script src="~/ScriptFiles/ForgotPassword.js"></script>

</body>
</html>


