
<div class="row" id="Monthcard_ManagePayFee" hidden>
    <div class=" col-md-12 mt-3">
        <div class="card card-primary p-3">
            <ul class="nav nav-tabs" id="myTab" role="tablist">
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="monthly-tab" data-bs-toggle="tab" data-bs-target="#monthly" type="button" role="tab" aria-controls="monthly" aria-selected="false" style="padding: 0px; padding-right: 4px; padding-left: 4px; display: none;">Monthly</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="activity-tab" data-bs-toggle="tab" data-bs-target="#activity" type="button" role="tab" aria-controls="activity" aria-selected="false" style="padding: 0px; padding-right: 4px; padding-left: 4px; display:none;">Activity</button>
                </li>
                <li class="nav-item" role="presentation">
                    <button class="nav-link" id="transport-tab" data-bs-toggle="tab" data-bs-target="#transport" type="button" role="tab" aria-controls="transport" aria-selected="false" style="padding: 0px; padding-right: 4px; padding-left: 4px; display:none;">Transport</button>
                </li>
            </ul>
            @{string[] arrAllMonth = { "Jan", "Feb", "Mar", "Apr", "May", "Jun", "Jul", "Aug", "Sep", "Oct", "Nov", "Dec" }; }
            <div class="tab-content" id="myTabContent">
                <div class="tab-pane fade " id="monthly" role="tabpanel" aria-labelledby="monthly-tab">
                    <div class="row">
                        @for (int a = 0; a < 12; a++)
                        {
                            var idName = "Monthly_chk_" + arrAllMonth[a];
                            <div class="col-md-3 pt-3">
                                <div class="form-check ">
                                    <input type="checkbox" class="form-check-input _Monthly" id=@idName onchange="clickOnMonthBox(this);">
                                    <label class="form-check-label" for=@idName style="cursor:pointer;"><b>@arrAllMonth[a]</b></label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="activity" role="tabpanel" aria-labelledby="activity-tab">
                    <div class="row">
                        @for (int a = 0; a < 12; a++) 
                        {
                            var idName = "Activity_chk_" + arrAllMonth[a];
                            <div class="col-md-3 pt-3">
                                <div class="form-check ">
                                    <input type="checkbox" class="form-check-input _Activity" id=@idName onchange="clickOnMonthBox(this);">
                                    <label class="form-check-label" for=@idName style="cursor:pointer;"><b>@arrAllMonth[a]</b></label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
                <div class="tab-pane fade" id="transport" role="tabpanel" aria-labelledby="transport-tab">
                    <div class="row">
                        @for (int a = 0; a < 12; a++)
                        {
                            var idName = "Transport_chk_" + arrAllMonth[a];
                            <div class="col-md-3 pt-3">
                                <div class="form-check ">
                                    <input type="checkbox" class="form-check-input _Transport" id=@idName onchange="clickOnMonthBox(this);">
                                    <label class="form-check-label" for=@idName style="cursor:pointer;"><b>@arrAllMonth[a]</b></label>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
