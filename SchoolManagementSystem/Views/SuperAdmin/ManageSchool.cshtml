
@{
    ViewBag.Title = "ManageSchool";
    Layout = "~/Views/Shared/_SuperAdminLayout.cshtml";
}


@*<link rel="stylesheet" href="https://code.jquery.com/ui/1.13.1/themes/base/jquery-ui.css">*@
<link href="~/Content/Panel/plugins/jquery-ui/jquery-ui.css" rel="stylesheet" />
<style>
    .imageViewer {
        border: 2px dashed #cecece;
        width: 135px;
        height: 135px;
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        align-content: center;
    }
</style>
<!-- Content Header (Page header) -->
<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>@HttpContext.GetGlobalResourceObject("Resource", "SA_Title")</h1>
            </div>
            <div class="col-sm-6" style="text-align:right;">
                <button id="btnAddNewSchool" type="button" class="btn btn-primary" onclick="AddNewSchool_ShowForm();"><i class="fa fa-plus" aria-hidden="true" style="margin-right:5px;"></i>@HttpContext.GetGlobalResourceObject("Resource", "SA_AddNewSchool")</button>
                @*<ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="#">Home</a></li>
                        <li class="breadcrumb-item active">General Form</li>
                    </ol>*@
            </div>
        </div>
    </div><!-- /.container-fluid -->
</section>

<!-- Main content -->
<section class="content">
    <div class="container-fluid">
        <div id="dv_AddUpdateSchoolForm" class="row" style="display:none;">
            <!-- left column -->
            <div class="col-md-12">
                <!-- general form elements -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 id="Title_SchoolForm_ManageSchool" class="card-title">@*Add New School*@</h3>
                    </div>
                    <!-- /.card-header -->
                    <!-- form start -->
                    <form>
                        <div class="card-body">

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_FirstName")<span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control" id="txtFirstName_ManageSchool" placeholder="@HttpContext.GetGlobalResourceObject("Resource", "SA_FirstName")">
                                        <span id="firstName_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_LastName")<span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control" id="txtLastName_ManageSchool" placeholder="@HttpContext.GetGlobalResourceObject("Resource", "SA_LastName")">
                                        <span id="lastName_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_SelectSchoolType")<span class="requiredFieldClass">*</span></label>
                                        <select id="ddlSchoolType_ManageSchool" class="form-control select2">
                                            <option value="0">@HttpContext.GetGlobalResourceObject("Resource", "SA_Select")</option>
                                            <option value="1">@HttpContext.GetGlobalResourceObject("Resource", "SA_Preschool")</option>
                                            <option value="2">@HttpContext.GetGlobalResourceObject("Resource", "SA_ElementaryMiddleSchool")</option>
                                            <option value="3">@HttpContext.GetGlobalResourceObject("Resource", "SA_HighSchool")</option>
                                            <option value="4">@HttpContext.GetGlobalResourceObject("Resource", "SA_TechnicalVocationalSchool")</option>

                                        </select>
                                        <span id="schoolType_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolName")<span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control" id="txtSchoolName_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolName")">
                                        <span id="schoolName_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_Email")<span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control isEmailField AvoidSpace" id="txtEmail_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_Email")">
                                        <span id="email_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_Password") <span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control" id="txtPassword_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_Password")">
                                        <span id="password_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_Mobile")<span class="requiredFieldClass">*</span></label>

                                        <div class="input-group">
                                            <div class="input-group-prepend">
                                                <span class="input-group-text">+91</span>
                                            </div>
                                            <input type="text" class="form-control IsNumeric" id="txtMobile_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_Mobile")Number" maxlength="10">
                                        </div>
                                        <span id="mobile_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_Pincode") <span class="requiredFieldClass">*</span></label>
                                        <input type="text" class="form-control" id="txtPincode_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_Pincode")">

                                        <span id="pincode_error_ManageSchool" class="errorsClass"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                @*School Logo Upload Section*@
                                <div class="col-md-6 form-group mt-3">
                                    <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolLogo")<span class="requiredFieldClass">*</span></label>
                                    <input type="file" name="schoolLogoImage" class="form-control" id="schoolLogoImage" accept="image/*" onchange="ShowSchoolImagePreview(this)" />
                                    <span id="schoolLogo_error_ManageSchool" class="errorsClass"></span>
                                    <div class="col-md-4 mt-md-4">
                                        <canvas id="canvas" style="display: none;"></canvas>
                                        @*Preview Image*@
                                        <div id="SchoolLogoImageViewer" class="imageViewer float-right">
                                            <img width="120" id="schoolLogoImagePreview" src="~/Content/Images/fileuploadpreview.jpg" />

                                        </div>
                                        <figcaption class="text-sm text-gray float-right" style="clear:both;">@HttpContext.GetGlobalResourceObject("Resource", "SA_Preview")</figcaption>

                                    </div>
                                </div>

                                <div class="col-md-6">
                                    <div class="form-group">
                                        <label>@HttpContext.GetGlobalResourceObject("Resource", "SA_Address") <span class="requiredFieldClass">*</span></label>
                                        <textarea class="form-control" id="txtAddress_ManageSchool" placeholder="Enter @HttpContext.GetGlobalResourceObject("Resource", "SA_Address")" rows="3"></textarea>
                                        <span id="address_error_ManageSchool" class="errorsClass"></span>
                                    </div>

                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-12">
                                    <div class="form-check">
                                        <input type="checkbox" class="form-check-input" id="chkIsActive_ManageSchool" checked>
                                        <label class="form-check-label" for="chkIsActive_ManageSchool" style="cursor:pointer;">@HttpContext.GetGlobalResourceObject("Resource", "SA_IsActive")</label>
                                    </div>
                                </div>
                            </div>

                        </div>
                        <!-- /.card-body -->

                        <div class="card-footer">
                            <button id="btnSubmitManageSchool" type="button" class="btn btn-primary" onclick="AddUpdateSchool(1);">@HttpContext.GetGlobalResourceObject("Resource", "SA_Submit")</button>
                            <button id="btnUpdateManageSchool" type="button" class="btn btn-primary" onclick="AddUpdateSchool(2);" style="display:none;">@HttpContext.GetGlobalResourceObject("Resource", "SA_Update")</button>
                            <button type="button" class="btn btn-default" onclick="CancelForm();">@HttpContext.GetGlobalResourceObject("Resource", "SA_Cancel")</button>
                        </div>
                    </form>
                </div>
                <!-- /.card -->
            </div>
            <!--/.col (left) -->
        </div>
        <div id="dv_SchoolListBox" class="row">
            <div class="col-md-12">
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolList")</h3>
                    </div>
                    <!-- /.card-header -->
                    <div class="card-body">

                        <table id="tblSchool_ManageSchool" class="table table-bordered table-striped">
                            <thead>
                                <tr>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Sno")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolInfo")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolType")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Address")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Pincode")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolStatus")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolEdit")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolDelete")</th>
                                </tr>
                            </thead>
                            <tbody>
                            </tbody>
                            <tfoot>
                                <tr>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Sno")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolInfo")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolType")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Address")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_Pincode")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolStatus")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolEdit")</th>
                                    <th>@HttpContext.GetGlobalResourceObject("Resource", "SA_SchoolDelete")</th>
                                </tr>
                            </tfoot>
                        </table>
                    </div>
                    <!-- /.card-body -->
                </div>
            </div>
        </div>
        <!-- /.row -->
    </div><!-- /.container-fluid -->
</section>
<!-- /.content -->
<script src="~/ScriptFiles/ManageSchool.js"></script>

<script>
    $(function () {
        $("#tblSchool_ManageSchool").DataTable();
        $(".isDatePicker").datepicker({ dateFormat: 'yy-mm-dd' });
        //Initialize Select2 Elements
        $('.select2').select2();

    });
</script>
<script>
    window.localizedLabels = {
        active: '@HttpContext.GetGlobalResourceObject("Resource", "MS_Active")',
        inactive: '@HttpContext.GetGlobalResourceObject("Resource", "MS_InActive")',
    };
</script>
