@model SchoolManagementSystem.ViewModel.ResetPasswordViewModel
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title>Elevation Institute | Reset Password</title>

    <!-- Google Font: Source Sans Pro -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700&display=fallback">
    <!-- Font Awesome -->
    <link rel="stylesheet" href="/Content/Panel/plugins/fontawesome-free/css/all.min.css">
    <!-- icheck bootstrap -->
    <link rel="stylesheet" href="/Content/Panel/plugins/icheck-bootstrap/icheck-bootstrap.min.css">
    <!-- Theme style -->
    <link rel="stylesheet" href="/Content/Panel/dist/css/adminlte.min.css">

    <style>
        .errorsClass {
            color: red;
        }

        .successClass {
            color: green;
        }
    </style>
</head>
<body class="hold-transition login-page">
    <!-- Preloader -->
    <div class="preloader flex-column justify-content-center align-items-center">
        <img src="/Content/Images/loadingImg.gif" alt="AdminLTELogo" height="100" width="100">
    </div>
    <div class="login-box">
        <!-- /.login-logo -->
        <div class="card card-outline card-primary">
            <div class="card-header text-center">
                <a href="/Login" class="h1" style="font-size:30px;"><b>Elevation Institute</b></a>
            </div>
            <div class="card-body">
                <p class="login-box-msg">Reset Password</p>
                @if (@Model != null && ViewBag.IsTokenValid == true)
                {
                    @*<form>*@
                    using (Html.BeginForm("ResetPassword", "Login", FormMethod.Post, new { @class = "", role = "form" }))
                    {
                        @Html.AntiForgeryToken();
                        @Html.HiddenFor(model => model.Token)
                        <div class="input-group">
                            <input id="Password" name="Password" type="password" class="form-control" placeholder="New Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <span id="password_error_Login" class="errorsClass"></span>
                        </div>
                        <div class="input-group">
                            <input id="ConfirmPassword" name="ConfirmPassword" type="password" class="form-control" placeholder="Confirm New Password">
                            <div class="input-group-append">
                                <div class="input-group-text">
                                    <span class="fas fa-lock"></span>
                                </div>
                            </div>
                        </div>
                        <div class="mb-3">
                            <span id="confirm_password_error_Login" class="errorsClass"></span>
                        </div>
                        <div class="row">
                            <div class="col-8" style="padding-top:8px;">
                                <a href="/Login">Login</a>
                            </div>
                            <!-- /.col -->
                            <div class="col-4">
                                <button type="submit" class="btn btn-primary btn-block" onclick="return resetPassword();">Submit</button>
                            </div>
                            <!-- /.col -->
                        </div>
                    }
                    @*</form>*@

                }
                else if (ViewBag.IsResetSuccessful == true)
                {
                    <div class="text-center mt-2 mb-3">
                        <span class="successClass">Password has been successfully changed!</span>
                    </div>
                    <div class="col-12 text-center mt-3">
                        <a href="/Login">Login</a>
                    </div>
                }
                else
                {
                    <div class="text-center mt-2 mb-3">
                        <span class="errorsClass">@ViewBag.ErrorMessage</span>
                    </div>
                }
                <div class="social-auth-links text-center mt-2 mb-3">
                    <div>
                        <span id="resp_error_Login" class="errorsClass"></span>
                    </div>
                </div>
            </div>
            <!-- /.card-body -->
        </div>
        <!-- /.card -->
    </div>
    <!-- /.login-box -->
    <!-- jQuery -->
    <script src="/ScriptFiles/Loader.js"></script>
    <script src="/Content/Panel/plugins/jquery/jquery.min.js"></script>
    <!-- Bootstrap 4 -->
    <script src="/Content/Panel/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>
    <!-- AdminLTE App -->
    <script src="/Content/Panel/dist/js/adminlte.min.js"></script>
    <script src="/ScriptFiles/ResetPassword.js"></script>

</body>
</html>


